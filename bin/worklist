#!/bin/bash

#Working Directory
REL_PATH="$PWD"

#Color/Formatting Options
BOLD=$(tput bold)
NORMAL=$(tput sgr0)
UNDERLINE=$(tput smul)
YELLOW=$(tput setaf 3)

#If a git directory, get issues from github for specified assignee
get_issues(){
  if [[ -f ".git" || -d ".git" ]]; then
    echo "${BOLD}${UNDERLINE}${YELLOW}${d}${NORMAL}"
    hub issue -a MatthewLaFalce
  fi
}

#for each sub-directory in current directory, get issues
for d in $REL_PATH/*/ ; do (cd "$d" && get_issues ); done

